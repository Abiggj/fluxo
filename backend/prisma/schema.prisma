// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// =========================
// Enums
// =========================

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
  GUEST
}

enum ProjectRole {
  MANAGER
  DESIGNER
  DEVELOPER
  QA
  VIEWER
}

enum ProjectStatus {
  PLANNED
  ACTIVE
  ON_HOLD
  COMPLETED
  ARCHIVED
}

enum SprintStatus {
  PLANNED
  ACTIVE
  COMPLETED
}

enum TaskType {
  GOAL_BASED
  DURATION_BASED
}

enum TaskStatus {
  ASSIGNED
  IN_REVIEW
  COMPLETED
  DUE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum ChangeRequestStatus {
  PENDING
  APPROVED
  REJECTED
  IMPLEMENTED
  CLOSED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ActivityType {
  // Project Activities
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_STATUS_CHANGED
  PROJECT_MEMBER_ADDED
  PROJECT_MEMBER_REMOVED
  PROJECT_MEMBER_ROLE_CHANGED

  // Task Activities
  TASK_CREATED
  TASK_UPDATED
  TASK_STATUS_CHANGED
  TASK_ASSIGNEE_CHANGED
  TASK_PRIORITY_CHANGED

  // Comment Activities
  COMMENT_CREATED
  COMMENT_UPDATED
  COMMENT_DELETED

  // Change Request Activities
  CHANGE_REQUEST_CREATED
  CHANGE_REQUEST_APPROVED
  CHANGE_REQUEST_REJECTED
  CHANGE_REQUEST_IMPLEMENTED
}

// =========================
// Core models
// =========================

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  users     User[]
  projects  Project[]
  labels    Label[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id                 String                 @id @default(cuid())
  email              String                 @unique
  name               String
  passwordHash       String
  avatarUrl          String?

  org                Organization           @relation(fields: [orgId], references: [id])
  orgId              String
  orgRole            OrgRole                @default(MEMBER)

  projectMemberships ProjectMember[]
  createdTasks       Task[]                 @relation("CreatedTasks")
  assignedTasks      Task[]                 @relation("AssignedTasks")
  reviewedTasks      Task[]                 @relation("ReviewedTasks")

  // New Relations
  comments           Comment[]
  activities         Activity[]
  changeRequests     ChangeRequest[]
  approvals          ChangeRequestApproval[]

  createdAt          DateTime               @default(now())
  updatedAt          DateTime               @updatedAt
}

model Project {
  id          String          @id @default(cuid())
  org         Organization    @relation(fields: [orgId], references: [id])
  orgId       String

  name        String
  key         String?         @unique
  description String?

  startDate   DateTime?
  endDate     DateTime?
  status      ProjectStatus   @default(ACTIVE)

  members     ProjectMember[]
  sprints     Sprint[]
  tasks       Task[]

  // New Relations
  changeRequests ChangeRequest[]
  activities     Activity[]
  comments       Comment[]

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model ProjectMember {
  id        String       @id @default(cuid())
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  project   Project      @relation(fields: [projectId], references: [id])
  projectId String
  role      ProjectRole
  createdAt DateTime     @default(now())

  @@unique([userId, projectId])
}

// =========================
// Sprints & Tasks
// =========================

model Sprint {
  id        String       @id @default(cuid())
  project   Project      @relation(fields: [projectId], references: [id])
  projectId String
  name      String
  goal      String?
  startDate DateTime
  endDate   DateTime
  status    SprintStatus @default(PLANNED)
  tasks     Task[]
  comments  Comment[]    // Comments can be made on sprints

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Task {
  id             String         @id @default(cuid())
  project        Project        @relation(fields: [projectId], references: [id])
  projectId      String
  sprint         Sprint?        @relation(fields: [sprintId], references: [id])
  sprintId       String?
  title          String
  description    String?
  type           TaskType
  status         TaskStatus     @default(ASSIGNED)
  priority       TaskPriority   @default(MEDIUM)
  assignee       User?          @relation("AssignedTasks", fields: [assigneeId], references: [id])
  assigneeId     String?
  createdBy      User           @relation("CreatedTasks", fields: [createdById], references: [id])
  createdById    String
  reviewer       User?          @relation("ReviewedTasks", fields: [reviewerId], references: [id])
  reviewerId     String?
  goal           String?
  startDate      DateTime?
  dueDate        DateTime?
  estimatedHours Float?
  actualHours    Float?

  // Relations
  attachments    TaskAttachment[]
  labels         TaskLabel[]
  comments       Comment[]      // Replaced TaskComment
  activities     Activity[]     // Replaced TaskStatusHistory

  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  deletedAt      DateTime?
}

// =========================
// NEW: Change Management
// =========================

model ChangeRequest {
  id          String                @id @default(cuid())
  project     Project               @relation(fields: [projectId], references: [id])
  projectId   String
  proposer    User                  @relation(fields: [proposerId], references: [id])
  proposerId  String
  title       String
  description String
  status      ChangeRequestStatus   @default(PENDING)
  approvals   ChangeRequestApproval[]
  comments    Comment[]
  activities  Activity[]

  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
}

model ChangeRequestApproval {
  id              String         @id @default(cuid())
  changeRequest   ChangeRequest  @relation(fields: [changeRequestId], references: [id])
  changeRequestId String
  reviewer        User           @relation(fields: [reviewerId], references: [id])
  reviewerId      String
  status          ApprovalStatus @default(PENDING)
  comment         String?

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@unique([changeRequestId, reviewerId])
}

// =========================
// NEW: Generic Collaboration & Audit
// =========================

model Comment {
  id         String   @id @default(cuid())
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String
  body       String   @db.Text

  // Polymorphic relation
  targetId   String
  targetType String // e.g., "Task", "Project", "ChangeRequest", "Sprint"

  // Relations to specific models (optional)
  task           Task?           @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId         String?
  project        Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId      String?
  sprint         Sprint?         @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  sprintId       String?
  changeRequest  ChangeRequest?  @relation(fields: [changeRequestId], references: [id], onDelete: Cascade)
  changeRequestId String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([targetId, targetType])
}

model Activity {
  id          String       @id @default(cuid())
  actor       User         @relation(fields: [actorId], references: [id])
  actorId     String
  type        ActivityType
  details     Json? // Store before/after values, e.g., { "from": "IN_PROGRESS", "to": "DONE" }

  // Polymorphic relation
  targetId    String
  targetType  String // e.g., "Task", "Project", "ChangeRequest"

  // Relations to specific models (optional)
  task           Task?           @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId         String?
  project        Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId      String?
  changeRequest  ChangeRequest?  @relation(fields: [changeRequestId], references: [id], onDelete: Cascade)
  changeRequestId String?

  createdAt   DateTime     @default(now())

  @@index([targetId, targetType])
}


// =========================
// Attachments & Labels
// =========================

model TaskAttachment {
  id        String   @id @default(cuid())
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  url       String
  fileName  String
  mimeType  String?
  sizeBytes Int?
  createdAt DateTime @default(now())
}

model Label {
  id        String     @id @default(cuid())
  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String
  name      String
  color     String?
  tasks     TaskLabel[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([orgId, name])
}

model TaskLabel {
  task    Task  @relation(fields: [taskId], references: [id])
  taskId  String
  label   Label @relation(fields: [labelId], references: [id])
  labelId String

  @@id([taskId, labelId])
}
