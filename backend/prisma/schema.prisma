// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

// =========================
// Enums
// =========================

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
}

enum ProjectRole {
  MANAGER
  DESIGNER
  DEVELOPER
  QA
  VIEWER
}

enum ProjectStatus {
  PLANNED
  ACTIVE
  ON_HOLD
  COMPLETED
  ARCHIVED
}

enum SprintStatus {
  PLANNED
  ACTIVE
  COMPLETED
}

enum TaskType {
  GOAL_BASED
  DURATION_BASED
}

enum TaskStatus {
  ASSIGNED
  IN_REVIEW
  COMPLETED
  DUE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// =========================
// Core models
// =========================

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  users     User[]
  projects  Project[]
  labels    Label[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String
  passwordHash String
  avatarUrl    String?

  org          Organization @relation(fields: [orgId], references: [id])
  orgId        String
  orgRole      OrgRole      @default(MEMBER)

  // Project membership
  projectMemberships ProjectMember[]

  // Tasks
  createdTasks   Task[] @relation("CreatedTasks")
  assignedTasks  Task[] @relation("AssignedTasks")
  reviewedTasks  Task[] @relation("ReviewedTasks")

  // Other relations
  comments       TaskComment[]
  statusChanges  TaskStatusHistory[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Project {
  id          String          @id @default(cuid())
  org         Organization    @relation(fields: [orgId], references: [id])
  orgId       String

  name        String
  key         String?         @unique
  description String?

  startDate   DateTime?
  endDate     DateTime?
  status      ProjectStatus   @default(ACTIVE)

  members     ProjectMember[]
  sprints     Sprint[]
  tasks       Task[]

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model ProjectMember {
  id        String       @id @default(cuid())

  user      User         @relation(fields: [userId], references: [id])
  userId    String

  project   Project      @relation(fields: [projectId], references: [id])
  projectId String

  role      ProjectRole

  createdAt DateTime     @default(now())

  @@unique([userId, projectId]) // one membership per user per project
}

// =========================
// Sprints & Tasks
// =========================

model Sprint {
  id        String       @id @default(cuid())
  project   Project      @relation(fields: [projectId], references: [id])
  projectId String

  name      String
  goal      String?

  startDate DateTime
  endDate   DateTime
  status    SprintStatus @default(PLANNED)

  tasks     Task[]

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Task {
  id          String        @id @default(cuid())

  project     Project       @relation(fields: [projectId], references: [id])
  projectId   String

  sprint      Sprint?       @relation(fields: [sprintId], references: [id])
  sprintId    String?

  title       String
  description String?

  type        TaskType
  status      TaskStatus    @default(ASSIGNED)
  priority    TaskPriority  @default(MEDIUM)

  // Assignee & creator & reviewer
  assignee    User?         @relation("AssignedTasks", fields: [assigneeId], references: [id])
  assigneeId  String?

  createdBy   User          @relation("CreatedTasks", fields: [createdById], references: [id])
  createdById String

  reviewer    User?         @relation("ReviewedTasks", fields: [reviewerId], references: [id])
  reviewerId  String?

  // Goal-based & duration-based fields
  goal        String?       // describes the goal (for GOAL_BASED)
  startDate   DateTime?     // for DURATION_BASED tasks
  dueDate     DateTime?     // used to determine DUE status

  estimatedHours Float?
  actualHours    Float?

  // Relations
  statusHistory TaskStatusHistory[]
  comments      TaskComment[]
  attachments   TaskAttachment[]
  labels        TaskLabel[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deletedAt   DateTime?
}

// =========================
// Tracking & collaboration
// =========================

model TaskStatusHistory {
  id          String      @id @default(cuid())

  task        Task        @relation(fields: [taskId], references: [id])
  taskId      String

  fromStatus  TaskStatus?
  toStatus    TaskStatus

  changedBy   User        @relation(fields: [changedById], references: [id])
  changedById String

  changedAt   DateTime    @default(now())
  note        String?
}

model TaskComment {
  id        String   @id @default(cuid())

  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String

  author    User     @relation(fields: [authorId], references: [id])
  authorId  String

  body      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaskAttachment {
  id        String   @id @default(cuid())

  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String

  url       String
  fileName  String
  mimeType  String?
  sizeBytes Int?

  createdAt DateTime @default(now())
}

// =========================
// Labels / tags
// =========================

model Label {
  id        String     @id @default(cuid())

  org       Organization @relation(fields: [orgId], references: [id])
  orgId     String

  name      String
  color     String?

  tasks     TaskLabel[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([orgId, name])
}

model TaskLabel {
  task    Task  @relation(fields: [taskId], references: [id])
  taskId  String

  label   Label @relation(fields: [labelId], references: [id])
  labelId String

  @@id([taskId, labelId])
}
