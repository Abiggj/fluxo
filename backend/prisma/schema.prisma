generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  roleId      Int
  role        Role         @relation(fields: [roleId], references: [id])
  projects    Project[]    @relation("UserProjects")
  works       Work[]       @relation("WorkAssignments")
  teams       Team[]       @relation("UserTeams")
  invitations Invitation[] @relation("InvitedUser")
  comments    Comment[]
  memberOf    Project[]    @relation("ProjectMembers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roleId])
  @@index([email])
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  permissions Permission[] @relation("RolePermissions")
  users       User[]
  invitations Invitation[]
}

model Permission {
  id    Int    @id @default(autoincrement())
  name  String @unique
  roles Role[] @relation("RolePermissions")
}

model Invitation {
  id         Int              @id @default(autoincrement())
  email      String
  inviter    User             @relation("InvitedUser", fields: [inviterId], references: [id])
  inviterId  Int
  project    Project          @relation(fields: [projectId], references: [id])
  projectId  Int
  role       Role             @relation(fields: [roleId], references: [id])
  roleId     Int
  status     InvitationStatus @default(PENDING)
  createdAt  DateTime         @default(now())
  acceptedAt DateTime?

  @@unique([email, projectId])
  @@index([inviterId])
  @@index([projectId])
  @@index([roleId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  description String?   @db.Text
  users       User[]    @relation("UserTeams")
  projects    Project[] @relation("ProjectTeams")
  works       Work[]    @relation("WorkTeams")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          Int          @id @default(autoincrement())
  name        String
  description String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  ownerId     Int
  owner       User         @relation("UserProjects", fields: [ownerId], references: [id])
  works       Work[]
  teams       Team[]       @relation("ProjectTeams")
  members     User[]       @relation("ProjectMembers")
  comments    Comment[]
  invitations Invitation[]

  @@index([ownerId])
}

model Work {
  id                     Int      @id @default(autoincrement())
  description            String   @db.Text
  duration               Int
  goal                   String   @db.Text
  dueDate                DateTime
  progressTrackingMethod String
  projectId              Int
  project                Project  @relation(fields: [projectId], references: [id])
  teams                  Team[]   @relation("WorkTeams")
  assignees              User[]   @relation("WorkAssignments")
  tasks                  Task[]
  gitRepositoryUrl       String?
  gitBranch              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([dueDate])
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?   @db.Text
  status      String
  dueDate     DateTime?
  workId      Int
  work        Work      @relation(fields: [workId], references: [id])
  comments    Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workId])
  @@index([status])
  @@index([dueDate])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  task      Task?    @relation(fields: [taskId], references: [id])
  taskId    Int?
  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([taskId])
  @@index([projectId])
}
